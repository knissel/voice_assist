# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here
MODEL_NAME=gemini-3-flash-preview

# Conversation memory (optional)
# CONVERSATION_ENABLED=true
# CONVERSATION_MAX_TURNS=6
# CONVERSATION_TTL_SECONDS=600
# CONVERSATION_CLEAR_PHRASES=new conversation,new topic,new question,start over,clear context,reset conversation,forget that,forget what i said
# CONVERSATION_RESET_ON_TOOL_CALL=true

# Porcupine Wake Word Configuration
PORCUPINE_ACCESS_KEY=your_porcupine_access_key_here

# Whisper Configuration
# Remote GPU server (optional - will fallback to local if unavailable)
# WHISPER_REMOTE_URL=http://192.168.1.100:5000
# Local fallback paths
WHISPER_PATH=/Users/kennynissel/voice_assist/whisper.cpp/build/bin/whisper-cli
MODEL_PATH=/Users/kennynissel/voice_assist/whisper.cpp/models/ggml-tiny.bin
# Optional mic selection (PyAudio device index)
# MIC_DEVICE_INDEX=0
# Optional mic sample rate (Hz)
# MIC_RATE=16000
# Wakeword mic selection (PyAudio device index or name substring)
# WAKEWORD_INPUT_DEVICE=default
# Wakeword mic sample rate (Hz)
# WAKEWORD_INPUT_SAMPLE_RATE=16000
# Wakeword VAD timing (seconds) - lower values start responding sooner
# WAKEWORD_GRACE_SECONDS=0.8
# WAKEWORD_SILENCE_SECONDS=0.8
# WAKEWORD_MAX_RECORD_SECONDS=15

# Piper TTS Configuration (local, low-latency TTS)
# Default: ./piper_models/en_US-lessac-medium.onnx
# PIPER_MODEL=/path/to/your/piper/model.onnx
# TTS output device (sounddevice output index or name substring)
# TTS_OUTPUT_DEVICE=1
# TTS output channels (1=mono, 2=stereo)
# TTS_OUTPUT_CHANNELS=1
# Allow retrying stereo if mono fails
# TTS_OUTPUT_ALLOW_STEREO_FALLBACK=true

# GPU TTS Configuration (high-quality XTTS on remote GPU)
# Set to "true" to enable GPU TTS with Piper fallback
USE_GPU_TTS=true
# URL of the XTTS server running on your GPU machine
XTTS_SERVER_URL=http://192.168.1.100:5001
# Streaming read timeout (seconds) for long TTS responses
XTTS_STREAM_TIMEOUT=30
# Streaming chunk size passed to XTTS (smaller = lower latency, more overhead)
XTTS_STREAM_CHUNK_SIZE=15
# Client read chunk size in bytes (smaller = lower latency, more overhead)
XTTS_STREAM_READ_CHUNK_BYTES=2400

# UI bridge (WebSocket from assistant -> UI server)
# UI_WS_URL=ws://localhost:8766

# Auto-route audio output to Bluetooth on startup (Linux/macOS)
# AUTO_ROUTE_BT_SINK=true
# BT_AUDIO_DEVICE_NAME=your_bluetooth_speaker_name

# Control4 Configuration
CONTROL4_USERNAME=your_control4_email@example.com
CONTROL4_PASSWORD=your_control4_password
CONTROL4_CONTROLLER_IP=192.168.1.100

# YouTube Music Playback Mode
# Set to "true" for headless Raspberry Pi (streams audio directly)
# Set to "false" for desktop (opens browser)
HEADLESS_PLAYBACK=false
